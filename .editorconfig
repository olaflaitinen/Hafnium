# EditorConfig - https://editorconfig.org

# Top-level EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# Java files
[*.java]
indent_size = 2
max_line_length = 100

# Gradle files
[*.gradle]
indent_size = 2

# SQL files
[*.sql]
indent_size = 2

# YAML files
[*.{yaml,yml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# CSS files
[*.css]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab
indent_size = 4

# Dockerfiles
[Dockerfile*]
indent_size = 2

# Rego files (OPA)
[*.rego]
indent_size = 2
