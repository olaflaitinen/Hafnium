# Hafnium Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# GENERAL
# =============================================================================
COMPOSE_PROJECT_NAME=hafnium
ENVIRONMENT=development

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=hafnium
POSTGRES_PASSWORD=hafnium_dev
POSTGRES_DB=hafnium
DATABASE_URL=postgresql://hafnium:hafnium_dev@postgres:5432/hafnium

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# KAFKA / REDPANDA
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=redpanda:9092
SCHEMA_REGISTRY_URL=http://redpanda:8085

# =============================================================================
# MINIO (Object Storage)
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio:9000

# =============================================================================
# VAULT (Secrets)
# =============================================================================
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=dev-root-token

# =============================================================================
# KEYCLOAK (Authentication)
# =============================================================================
KEYCLOAK_AUTH_SERVER_URL=http://keycloak:8080
KEYCLOAK_REALM=hafnium
KEYCLOAK_CLIENT_ID=hafnium-api
KEYCLOAK_CLIENT_SECRET=change-me-in-production

# =============================================================================
# OPA (Authorization)
# =============================================================================
OPA_URL=http://opa:8181

# =============================================================================
# OBSERVABILITY
# =============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://tempo:4317
OTEL_SERVICE_NAME=hafnium
LOG_LEVEL=INFO

# =============================================================================
# AI PLATFORM
# =============================================================================
MODEL_STORE=s3://hafnium-models
FEATURE_STORE_OFFLINE_PATH=s3://hafnium-features

# =============================================================================
# FRONTEND
# =============================================================================
REACT_APP_API_URL=http://localhost:8080
REACT_APP_KEYCLOAK_URL=http://localhost:8081
REACT_APP_KEYCLOAK_REALM=hafnium
REACT_APP_KEYCLOAK_CLIENT_ID=hafnium-web
