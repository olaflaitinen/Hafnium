# Backend Java Development Dockerfile
FROM eclipse-temurin:21-jdk-alpine

WORKDIR /app

# Install Gradle
RUN apk add --no-cache bash

# Copy Gradle files
COPY build.gradle settings.gradle gradlew ./
COPY gradle gradle

# Download dependencies (cached layer)
RUN ./gradlew dependencies --no-daemon || true

# Copy source code
COPY src src

# Build application
RUN ./gradlew bootJar --no-daemon

# Expose port
EXPOSE 8080

# Run application
CMD ["java", "-jar", "build/libs/hafnium-backend-1.0.0.jar"]
